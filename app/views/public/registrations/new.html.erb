<div class="container mx-auto" style="width: 1000px;">
  <h2>新規会員登録</h2>

    <%= form_with model: @customer, url: customer_registration_path do |f| %>
      <%= render 'public/shared/error_messages', resource: %>

　　　<div class="form-group row m-2"><label class="col-sm-3 col-form-label">名前</label>
            <div class="col-sm-9">
            <%= f.text_field :name %>
            </div>

         <label class="col-sm-3 col-form-label">メールアドレス</label>
            <div class="col-sm-9">
            <%= f.email_field :email, autofocus: true, autocomplete: 'email' %>
            </div>

         <label class="col-sm-3 col-form-label">パスワード
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %>
         </label>
            <div class="col-sm-9">
              <%= f.password_field :password, autocomplete: 'new-password' %>
            </div>

         <label class="col-sm-3 col-form-label">パスワード(確認用)</label>
            <div class="col-sm-9">
              <%= f.password_field :password_confirmation, autocomplete: 'new-password' %>
            </div>

         <div class="col-sm-3">
          </div>
         <div class="actions col-sm-9">
           <%= f.submit '新規登録', class: 'btn btn-success' %>
         </div>
    <% end %>

    <%= render 'public/shared/links' %>
  </div>
</div>
