  <div class="container">
    <div class="row">
      <div class="col-3">
        <h4>投稿</h4>
          <% if @post_content.image.attached? %>
            <%= image_tag @post_content.image.variant(resize_to_limit: [100, 100]).processed %>
          <% else %>
            <%= image_tag 'no_image', size: "100x100" %>
          <% end %>
        </div>
          <div class="col-9">
            <div class="item-group row">

              <label class="col-sm-5 col-item-label">位置情報</label>
           <div class="col-sm-7">
              <%= @post_content.address %>
           </div>

            <label class="col-sm-5 col-form-label">場所名</label>
            <div class="col-sm-7">
              <%= @post_content.name %>
            </div>

            <label class="col-sm-5 col-form-label">内容</label>
            <div class="col-sm-7">
              <%= @post_content.description %>
            </div>

          <%= link_to "編集する",edit_post_content_path(@post_content),class:"btn btn-success btn-sm mt-5" %>
            </div>
            
          <div class="comment-wrapper border-top　mb-10">
          <p class="mt-5">コメント一覧</p>
          <% @comments.each do |c| %>
            <div>
              <% unless c.customer.blank? %>
                <a href="<%= customers_path(c.customer_id) %>">
                  <%= image_tag c.customer.get_profile_image(50,50),
                    class:"rounded-circle icon_image mr-3 mb-3"%>
                </a>
                <% end %>
              <%= c.customer.name unless c.customer.blank? %>
              <br />
              <%= c.content %>
            </div>
            <br />
          <% end %>
          <% if customer_signed_in? %>
            <%= form_with(model: [@post_content, @comment], local: true, url: comments_path) do |f| %>
              <%= f.text_area :content, class: "form-control", rows: 5 %>
              <%= f.hidden_field :post_id, value: @post_content.id %>
              <%= button_tag type: "submit", class: "btn btn-success float-right mt-1" do %>
                <i class="far fa-comments"></i> コメントする
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>