<main>
  <body>
    <div class="container mx-auto" style="width: 600px;">
      <h4>投稿内容編集</h4>
    <div class="row">
         <p id="notice"></p>

         <%= form_with model: @post_content, url: post_content_path(@post_content) do |f| %>

            <div class="form-group row">
          <label class="col-sm-5 col-form-label">画像</label>
           <div class="col-sm-7">
             <%= f.file_field :main_images, multiple: true %>
           </div>

           <label class="col-sm-5 col-form-label">位置情報</label>
            <div class="col-sm-7">
            <%= f.text_field :address %>
            </div>

            <label class="col-sm-5 col-form-label">場所名</label>
            <div class="col-sm-7">
            <%= f.text_field :name %>
            </div>

            <label class="col-sm-5 col-form-label">内容</label>
            <div class="col-sm-7">
            <%= f.text_area :description %>
           </div>

            <%= f.submit '変更を保存', class: 'btn btn-success' %>
          <% end %>
      </div>
    </div>
  </div>
 </body>
</main>
