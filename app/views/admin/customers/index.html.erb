<div class="container">
  <h1>会員一覧</h1>
  <table class="table tanle-hover table-inverse bg-light my-5">
   <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>

      </tr>
    </thead>
   <tbody>
  <% @customers.each do |customer| %>
    <tr>
      <td>
         <%= customer.id %>
         <%= image_tag customer.get_profile_image(100, 100), class: 'rounded-circle icon_image mr-3 mb-3' %>
    　    </td>
         <td><%= link_to admin_customer_path(customer.id) do %>
           <%= customer.name %>
           <% end %></td>
         <td><%= customer.email %></td>
          <td>
         <% if customer.is_active %>
           有効
         <% else %>
           退会
         <% end %>
      </td>
    </tr>
  <% end %>
    </tbody>
   </table>
    <%= paginate @customers, theme: 'twitter-bootstrap-4' %>
</div>
