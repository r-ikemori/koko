<%= form_with url: ranking_admin_post_contents_path, method: :get, local: true do |f| %>
  <%= f.select :prefecture,   ["北海道", "青森県", "岩手県", "宮城県", "秋田県", "山形県", "福島県", "茨城県", "栃木県", "群馬県", "埼玉県", "千葉県", "東京都", "神奈川県", "新潟県", "富山県", "石川県", "福井県", "山梨県", "長野県", "岐阜県", "静岡県", "愛知県", "三重県", "滋賀県", "京都府", "大阪府", "兵庫県", "奈良県", "和歌山県", "鳥取県", "島根県", "岡山県", "広島県", "山口県", "徳島県", "香川県", "愛媛県", "高知県", "福岡県", "佐賀県", "長崎県", "熊本県", "大分県", "宮城県", "鹿児島県", "沖縄県"],
  {include_blank: '選択ボックス', selected: @prefecture },class: "" %>
  <%= f.submit "検索"%>
<%end%>
<% @post_contents.each do |post|%>
  
  <div class="container" style="margin-top: 50px;">
    <div class="row">
      <div class="col-5">
          <% if post.main_images.attached? %>
            <div class="image_slide mr-5">
              <% post.main_images.each do |image| %>
                <div class="image_size"><%= image_tag(image, size: "300x300") %></div>
              <%end%>
            </div>
          <% else %>
            <%= image_tag 'no_image', size: "100x100" %>
          <% end %>
        </div>
          <div class="col-7">
            <div class="item-group row">
            
          <label class="col-sm-5 col-item-label">投稿者</label>
           <div class="col-sm-7">
             <%= link_to admin_customer_path(post.customer.id) do %>
               <%= post.customer.name%>
             <%end%>
           </div>

           <label class="col-sm-5 col-item-label">位置情報</label>
           <div class="col-sm-7">
              <%= post.address %>
           </div>

            <label class="col-sm-5 col-form-label">場所名</label>
            <div class="col-sm-7">
              <%= link_to admin_post_content_path(post.id) do %>
                <%= post.name %>
              <%end%>
            </div>

            <label class="col-sm-5 col-form-label">内容</label>
            <div class="col-sm-7">
              <%= post.description %>
            </div>
    </div>
  </div>
<%end%>

<script>
  $(function() {
    $('.image_slide').slick({
        dots: true,
        centerMode: true,
        centerPadding: "0px",
    });
  });
</script>